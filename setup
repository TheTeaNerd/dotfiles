#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

if [[ -L ~/.vimrc ]]; then
    echo "âœ… .vimrc"
elif [[ -f ~/.vimrc ]]; then
    echo "âŒ .vimrc exists"
else
    echo "ğŸ›  Linking .vimrc"
    ln -s ${DIR}/vimrc ~/.vimrc || exit 1
fi

if [[ -L ~/.gitignore ]]; then
    echo "âœ… .gitignore"
elif [[ -f ~/.gitignore ]]; then
    echo "âŒ .gitignore exists"
else
    echo "ğŸ›  Linking .gitignore"
    ln -s ${DIR}/gitignore ~/.gitignore || exit 1
fi

if [[ -L ~/.gitconfig ]]; then
    echo "âœ… .gitconfig"
elif [[ -f ~/.gitconfig ]]; then
    echo "âŒ .gitconfig exists"
else
    echo "ğŸ›  Linking .gitconfig"
    ln -s ${DIR}/gitconfig ~/.gitconfig || exit 1
fi

exit 0
